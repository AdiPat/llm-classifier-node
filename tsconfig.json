{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "./src",

    "paths": {
      "*": ["node_modules/*"],
      "@avski/*": ["*"]
    },
    "jsx": "react",
    "types": ["react", "jest", "node"],
    "typeRoots": ["node_modules/@types"],
    "skipLibCheck": true,
    "noEmitOnError": false
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "tests/**/*.ts"],
  "exclude": ["node_modules"]
}
